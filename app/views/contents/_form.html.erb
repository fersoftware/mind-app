<% if content.errors.any? %>
    Errors: <%= content.errors.full_messages.join(', ')%>
    <br><br>
<% end %>

<%= form_with(model:content, local:true) do |form| %>
    <div class'field'>
        <%= form.label :title%>
        <%= form.text_field :title%>
    </div>    
    <div class'field'>
        <%= form.label :description%>
        <%= form.text_area :description%>
    </div>
    <div class="actions">
        <%=form.submit%>
    </div>
<% end %>
